
import java.util.*;
public class Main
{
    
    public static class node{
        int data;
        node next;
        node(int data){
            this.data=data;
        }
    }
    public static void display(node head){
        //recursive
        if(head==null){
            return;
        }else{
            System.out.println(head.data);
            display(head.next);
        }
    }
    public static void Rdisplay(node head){
        // reverse recursive
        if(head==null){
            return;
        }else{
            
            Rdisplay(head.next);
            System.out.println(head.data);
        }
    }
	public static void main(String[] args) {
	   // Scanner sc=new Scanner(System.in);
	   node a=new node(4);
	   node b=new node(5);
	   node c=new node(10);
	   a.next=b;
	   b.next=c;
	   //printing the nodes;
	   int count=0
	   node temp=a;
	   while(temp!=null){
	       count++;
	       System.out.print(temp.data+" ");
	       temp=temp.next;
	   }
	   System.out.println(count);//length 
	   System.out.println();
	   display(a);
	    System.out.println();
	   Rdisplay(a);
	    
		
}}
